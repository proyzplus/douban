.item-nav .item-group{
  width: 100%;
}
.item-group .img-group{
  width: 100%;
  height: 284rpx;
}
.img-group .img{
  width: 100%;
  height: 284rpx;
}
.item-group .img-title{
  font-size: 28rpx;
  text-align: center;
  margin-top: 16rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.rate-group{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #ccc;
  margin-top: 12rpx;
}
.rate-group image{
  width: 20rpx;
  height: 20rpx;
}